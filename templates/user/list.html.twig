{% extends 'poco-layout.html.twig' %}

{% block title %}View Agents
{% endblock %}
{%block top_actions%}
 {%include 'feathericons/_create.html.twig' with {'create_path': path('users_register'),'text':'ADD NEW AGENT'} %}
{% endblock%}
{%block breadcrumb%}
 <li class="breadcrumb-item"><a  href="{{path('app_admin')}}">Home</a></li>
<li class="breadcrumb-item ">Sales Agents </li>

{%endblock%}
{%block body%}
<div class="table-responsive">
	<table class="table table-striped table-sm">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Full Name</th>
				<th scope="col">Email</th>
				<th scope="col">Location</th>
				<th scope="col">Roles</th>
				<th scope="col">Calendar Color</th>
				<th scope="col">Last Login</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>

			{% for agent in agents %}
				<tr>
					<td>{{loop.index}}</td>
					<td>{{agent}}</td>
					<td>{{agent.email}}</td>
					<td>{{agent.location}}</td>
					<td>{{agent.roles|join('|')}}</td>
					<td ><span style="background-color:{{agent.calendarColor}}">{{agent.calendarColor}}</span></td>
					<td>{{agent.lastLogin}}</td>
					<td>
						<div class="btn-group me-2">
						{% include 'feathericons/_edit.html.twig' with {
                           'edit_path':path('users_edit',{'id':agent.id})
                         }%}
						 {% include 'feathericons/_delete.html.twig' with {
                           'delete_path':path('users_delete',{'id':agent.id})
                         }%}
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>


{%endblock%}
